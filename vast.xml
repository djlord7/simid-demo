<VAST version="4.1" xmlns="http://www.iab.com/VAST">
  <Ad id="simid-widget-demo">
    <InLine>
      <AdSystem>SIMID Demo</AdSystem>
      <AdTitle>SIMID Interactive Test</AdTitle>
      <Creatives>
        <!-- Main Linear Video Creative -->
        <Creative sequence="1" id="videoCreative">
          <Linear>
            <Duration>00:00:15</Duration>
            <MediaFiles>
              <MediaFile delivery="progressive" type="video/mp4" width="1280" height="720">
                <![CDATA[https://interactive-examples.mdn.mozilla.net/media/cc0-videos/flower.mp4]]>
              </MediaFile>
            </MediaFiles>
          </Linear>
        </Creative>

        <!-- SIMID Interactive Creative -->
        <Creative sequence="1" id="simidCreative">
          <InteractiveCreativeFile type="application/javascript" apiFramework="SIMID">
            <![CDATA[https://djlord7.github.io/simid-demo/simid.js]]>
          </InteractiveCreativeFile>
        </Creative>
      </Creatives>
      <Impression><![CDATA[https://tracker.iion.com/impression]]></Impression>
    </InLine>
  </Ad>
</VAST>
